# ========================================
# FRUIT STORE MANAGEMENT SYSTEM
# Local Development Configuration
# ========================================
# Copy this file to .env and update the values for your local setup

# ========================================
# DATABASE CONFIGURATION
# ========================================

# MongoDB connection string for local development
# Default local MongoDB installation
MONGODB_URL=mongodb://localhost:27017

# Database name
DATABASE_NAME=fruit_store

# ========================================
# APPLICATION SETTINGS
# ========================================

# Server configuration
APP_HOST=0.0.0.0
APP_PORT=8000

# Auto-reload for development (automatically restarts server when code changes)
APP_RELOAD=true

# Application information
APP_TITLE=Fruit Store Management
APP_VERSION=1.0.0

# Enable debug mode for detailed error messages
DEBUG=true

# ========================================
# SECURITY (Basic Setup)
# ========================================

# Secret key for security features (change this to a random string)
SECRET_KEY=your-secret-key-here-change-this-to-something-random

# JWT algorithm (for future authentication features)
ALGORITHM=HS256

# ========================================
# LOGGING
# ========================================

# Log level (DEBUG shows all logs, INFO for normal operation)
LOG_LEVEL=INFO

# ========================================
# FILE PATHS
# ========================================

# Template directory (where HTML files are stored)
TEMPLATE_DIR=templates

# Static files directory (for CSS, JS, images)
STATIC_DIR=static

# ========================================
# QUICK SETUP NOTES
# ========================================
# 1. Make sure MongoDB is installed and running on your system
# 2. Copy this file to .env: cp .env.example .env
# 3. Install dependencies: pip install -r requirements.txt
# 4. Run the application: python main.py
# 5. Open browser to: http://localhost:8000